---
const { title = "StarboyChad.com" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>

  <body style="margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;">
    <!-- Neon background -->
    <div class="bg"></div>

    <div class="wrap">
      <header class="header">
        <a class="brand" href="/">
          <span class="dot"></span>
          <span class="brandText">STARBOY CHAD</span>
        </a>

        <nav class="nav">
          <a href="/about">About</a>
          <a href="/channels">Comms</a>
          <a href="/modding">Modding</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        NEON WASTELAND NODE // ONLINE
      </footer>
    </div>

    <style>
      .bg{
        position:fixed; inset:0; pointer-events:none;
        background:
          radial-gradient(600px 600px at 50% -10%, rgba(232,121,249,0.22), transparent 60%),
          radial-gradient(700px 700px at 30% 110%, rgba(34,211,238,0.18), transparent 60%),
          radial-gradient(circle at 1px 1px, rgba(255,255,255,0.06) 1px, transparent 0);
        background-size: auto, auto, 18px 18px;
        background-color:#05060a;
      }
      .wrap{ position:relative; max-width: 980px; margin:0 auto; padding: 40px 18px; min-height:100vh; color:#fff; }
      .header{ display:flex; align-items:center; justify-content:space-between; gap:20px; margin-bottom: 28px; }
      .brand{ display:flex; align-items:center; gap:10px; text-decoration:none; color:#fff; }
      .dot{
        width:10px; height:10px; border-radius:999px; background:#22d3ee;
        box-shadow: 0 0 18px rgba(34,211,238,0.7);
      }
      .brandText{ letter-spacing: 0.35em; font-size: 12px; opacity: 0.9; }
      .nav{ display:flex; gap:18px; }
      .nav a{
        color:#fff; text-decoration:none; font-size:12px; letter-spacing:0.2em; text-transform:uppercase;
        opacity:0.75;
      }
      .nav a:hover{ opacity:1; }
      .main{ padding-top: 10px; }
      .footer{
        margin-top: 48px; padding-top: 14px; border-top: 1px solid rgba(255,255,255,0.12);
        font-size: 11px; letter-spacing: 0.25em; opacity: 0.6;
      }
    </style>
  </body>
</html>
