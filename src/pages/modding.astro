---
import Layout from "./layouts/Layout.astro";

const nexusLink = "https://www.nexusmods.com/games/cyberpunk2077/collections/dpdx4q"; // replace with your real collection link
---

<Layout title="Modding // StarboyChad.com">
  <section class="panel">
    <p class="kicker">MODDING HUB</p>
    <h1 class="title">Modding</h1>

    <p class="intro">
      Curated collections live on Nexus Mods.
    </p>

    <a
      class="linkCard"
      href={nexusLink}
      target="_blank"
      rel="noreferrer"
    >
      <div class="left">
        <p class="label">NEXUS MODS</p>
        <p class="value">NC After Dark</p>
      </div>
      <div class="right">
        <span class="chip">OPEN</span>
      </div>
    </a>

    <div class="divider"></div>

    <div class="construction">
      <span class="warnDot"></span>
      <p class="warnText">
        Under construction. This page will expand as original mods enter development.
      </p>
    </div>
  </section>

  <style>
    .panel{
      border:1px solid rgba(255,255,255,0.12);
      background: rgba(255,255,255,0.04);
      border-radius: 22px;
      padding: 28px;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 0 1px rgba(255,255,255,0.06);
    }

    .kicker{ font-size:11px; letter-spacing:0.35em; opacity:0.7; text-transform:uppercase; margin:0 0 10px; }
    .title{ margin:0 0 10px; font-size: 28px; line-height:1.15; }

    .intro{
      margin: 0 0 18px;
      font-size: 16px;
      line-height: 1.65;
      opacity: 0.85;
    }

    .linkCard{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 14px;
      padding: 18px;
      border-radius: 18px;
      text-decoration:none;
      color:#fff;
      border:1px solid rgba(255,255,255,0.12);
      background: rgba(0,0,0,0.18);
      transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
    }

    .linkCard:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.06);
      border-color: rgba(34,211,238,0.25);
      box-shadow: 0 0 18px rgba(34,211,238,0.10);
    }

    .label{
      margin:0 0 6px;
      font-size: 11px;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      opacity: 0.75;
    }

    .value{
      margin:0;
      font-size: 15px;
      letter-spacing: 0.05em;
      opacity: 0.92;
    }

    .chip{
      display:inline-block;
      padding: 8px 12px;
      border-radius: 999px;
      font-size: 10px;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      border:1px solid rgba(255,255,255,0.18);
      background: rgba(255,255,255,0.05);
      opacity: 0.85;
      white-space: nowrap;
    }

    .divider{
      height:1px;
      background: rgba(255,255,255,0.12);
      margin: 18px 0 16px;
    }

    .construction{
      display:flex;
      align-items:center;
      gap: 10px;
      opacity: 0.75;
    }

    .warnDot{
      width:10px;
      height:10px;
      border-radius:999px;
      background:#facc15;
      box-shadow: 0 0 14px rgba(250,204,21,0.6);
      flex-shrink:0;
    }

    .warnText{
      margin:0;
      font-size: 13px;
      letter-spacing: 0.04em;
      line-height: 1.4;
    }
  </style>
</Layout>
